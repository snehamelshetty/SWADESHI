+    // compute CSS-like filter parameters
+    const b = 1 + (adj.brightness / 100) + ((strength - 50) / 400);
+    const c = 1 + ((strength - 50) / 180);
+    const s = 1 + (adj.saturate / 100) + (style === 'artistic' ? 0.15 : 0);
